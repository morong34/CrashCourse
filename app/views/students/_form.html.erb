<%= render 'Shared/errors', obj: @student %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header"><%= @student.new_record? ? "Sign up" : "Edit your profile" %></h3>
        <div class="row">
          <%= form_for(@student, html: { class: "col s12"}) do |f| %>
            <div class="row">
              <div class= "input-field col s12">
                <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
                <%= f.label :name, class: "actives"%>
              </div>
            </div>

            <div class="row">
              <div class= "input-field col s12">
                <%= f.text_field :email, placeholder: "Enter your email address", autofocus: true %>
                <%= f.label :email, class: "active" %>
              </div>
            </div>

            <div class="row">
              <div class= "input-field col s12">
                <%= f.password_field :passwrod, placeholder: "Chosse a password", autofocus: true %>
                <%= f.label :passwrod, class: "active"%>
              </div>
            </div>

            <div class="row">
              <div class= "input-field col s12">
                <%= f.password_field :passwrod_confirmation, placeholder: "Confirmation your password", autofocus: true %>
                <%= f.label :passwrod_confirmation, class: "active"%>
              </div>
            </div>

            <div class="row">
              <div class= "input-field col s12">
                <%= f.button(@student.new_record? ? '<i class="material-icons right">create</i>Sign up'.html_safe : '<i class="material-icons right">arrow_forward</i>Submit Updates'.html_safe, class: "btn orange waves-effect waves-light")%>
              </div>
            </div>   
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>